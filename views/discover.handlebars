{{> nav}}
<section class="search-bar">
    <div class="shape1">
        <div class="input-group">
            <span class="input-group-prepend">
                <div class="input-group-text bg-transparent"><i class="fa fa-search"></i></div>
            </span>
            <input type="text" placeholder="Search" class="form-control bg-transparent">
        </div>
    </div>
</section>
<div class="d-grid gap-2 d-md-flex justify-content-md-center m-5">
    <button class="btn btn-primary me-md-2" type="button" id="con-btn"><a id="discover" href="/api/discover/">Discover</a></button>
    <button class="btn btn-primary" type="button" id="not-btn"><a id="seasonal" href="/api/discover/seasonal">Seasonal</a></button>
    <button class="btn btn-primary" type="button" id="con-btn"><a id="popular" href="/api/discover/popular">Popular</a></button>
    <button class="btn btn-primary" type="button" id="not-btn"><a id="recommended" href="/api/discover/recommended">Recommended</a></button>
</div>

